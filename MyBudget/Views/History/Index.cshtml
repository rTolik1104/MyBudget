@model HistoryVM
<h1>История</h1>
<div class="date">
    <input value="@DateTime.Now" readonly/>
</div>
<div class="recent-order">
    <h2>Доходы</h2>
    <table>
        <thead>
            <tr>
                <th>Категория</th>
                <th>Статус</th>
                <th>Суммма</th>
                <th>Комментарий</th>
                <th>Дата</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var income in Model.Incomes)
            {
                <tr>
                    <td>@income.Category</td>
                    <td><span class="income">Income</span></td>
                    <td>@income.Amout</td>
                    <td>@income.Comment</td>
                    <td>@income.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="recent-order">
    <h2>Расходы</h2>
    <table>
        <thead>
            <tr>
                <th>Категория</th>
                <th>Статус</th>
                <th>Суммма</th>
                <th>Комментарий</th>
                <th>Дата</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.Category</td>
                    <td><span class="expense">Expenses</span></td>
                    <td>@expense.Amout</td>
                    <td>@expense.Comment</td>
                    <td>@expense.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>
